{
  "name": "inkwell-backend",
  "version": "1.0.0",
  "description": "Inkwell â€” MERN Blog App - Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:quality": "eslint . --ext .js --no-eslintrc -c .eslintrc.quality.json"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.6",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.23.0",
    "nodemailer": "^8.0.1"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-plugin-sonarjs": "^0.19.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.14",
    "supertest": "^7.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "middleware/**/*.js",
      "models/**/*.js",
      "routes/**/*.js"
    ]
  }
}
